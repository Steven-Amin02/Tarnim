<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <AssemblyTitle>ترنيمات روحية</AssemblyTitle>
    <Product>ترنيمات روحية</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="10.0.1" />
    <PackageReference Include="WPF-UI" Version="4.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="song.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Copy logo files to output -->
  <ItemGroup>
    <Resource Include="logo.ico" />
    <Content Include="logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Copy pptx_files folder to output -->
  <ItemGroup>
    <None Include="pptx_files\**\*.pptx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>pptx_files\%(Filename)%(Extension)</Link>
    </None>
  </ItemGroup>

</Project>



