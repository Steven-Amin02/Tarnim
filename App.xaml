<Application x:Class="Tarnim.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tarnim"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <!-- 🎨 Theme Brushes (Updated dynamically by ApplyTheme) -->
            <!-- Dark Theme Defaults -->
            <Color x:Key="BgDark">#0f172a</Color>
            <Color x:Key="SurfaceDark">#1e293b</Color>
            <Color x:Key="SurfaceHighlightDark">#334155</Color>
            <Color x:Key="AccentGold">#fbbf24</Color>
            <Color x:Key="TextPrimary">#f8fafc</Color>
            <Color x:Key="TextSecondary">#94a3b8</Color>
            <Color x:Key="BorderDark">#334155</Color>
            
            <!-- Dynamic Brushes (These are replaced at runtime by MainWindow.ApplyTheme) -->
            <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgDark}"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceDark}"/>
            <SolidColorBrush x:Key="SurfaceHighlightBrush" Color="{StaticResource SurfaceHighlightDark}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentGold}"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderDark}"/>

            <Style x:Key="TopBarIconStyle" TargetType="{x:Type ui:SymbolIcon}">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Style>

            <Style x:Key="ActionIconStyle" TargetType="{x:Type ui:SymbolIcon}">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Opacity" Value="0.95"/>
            </Style>
            
            <!-- Light Theme Colors (for reference in code) -->
            <Color x:Key="BgLight">#f8fafc</Color>
            <Color x:Key="SurfaceLight">#ffffff</Color>
            <Color x:Key="SurfaceHighlightLight">#f1f5f9</Color>
            <Color x:Key="AccentAmber">#d97706</Color>
            <Color x:Key="TextDark">#0f172a</Color>
            <Color x:Key="TextMuted">#64748b</Color>
            <Color x:Key="BorderLight">#e2e8f0</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>

